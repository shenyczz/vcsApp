<Application x:Class="Hdwas.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hdwas"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>

        <!--文档头模板-->
        <DataTemplate x:Key="DocumentHeaderTemplate">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding IconSource}" Margin="0,0,3,0"/>
                <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </DataTemplate>

        <!--干热风强度转换器-->
        <local:HDWStrengthConverter x:Key="HdwStrengthConverter"/>
        
        <!--干热风颜色-->
        <local:HDWColorConverter x:Key="HdwColorConverter"/>

    </Application.Resources>
</Application>
